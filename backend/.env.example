# ========================================
# DATABASE CONFIGURATION
# ========================================
# Railway will provide these values automatically
# Copy these to Railway's environment variables
DB_HOST=your_mysql_host
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=arkanghel_db
DB_PORT=3306

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=8081
NODE_ENV=production

# ========================================
# JWT CONFIGURATION
# ========================================
# Generate a random secret key (at least 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_to_random_string

# ========================================
# AZURE AD CONFIGURATION
# ========================================
# Get these from Azure Portal > App Registrations
AZURE_CLIENT_ID=your_azure_client_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_SECRET=your_azure_client_secret
# Update this with your Railway backend URL after deployment
AZURE_REDIRECT_URI=https://your-backend-url.railway.app/auth/callback

# ========================================
# EMAIL CONFIGURATION
# ========================================
# Gmail configuration (use App Password, not regular password)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
EMAIL_FROM=your_email@gmail.com

# ========================================
# FRONTEND CONFIGURATION
# ========================================
# Update this with your Railway frontend URL after deployment
FRONTEND_URL=https://your-frontend-url.railway.app

# ========================================
# NOTES FOR RAILWAY DEPLOYMENT
# ========================================
# 1. Copy all these variables to Railway's environment variables
# 2. Replace all "your_*" placeholders with actual values
# 3. Update AZURE_REDIRECT_URI and FRONTEND_URL after getting Railway URLs
# 4. Generate a strong JWT_SECRET using crypto.randomBytes
# 5. Use Gmail App Password for EMAIL_PASSWORD (not your regular password)
